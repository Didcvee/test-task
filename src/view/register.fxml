<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane prefHeight="800.0" prefWidth="1280.0" styleClass="root" stylesheets="@resources/css/login.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RegisterController">
   <BorderPane prefHeight="200.0" prefWidth="200.0">
      <center>
         <AnchorPane styleClass="root" BorderPane.alignment="CENTER">
            <ImageView fitHeight="198.0" fitWidth="193.0" layoutX="544.0" layoutY="144.0" pickOnBounds="true" preserveRatio="true">
               <Image url="@resources/img/brand/sm-logo.png" />
            </ImageView>
            <Text id="welcome-text" layoutX="544.0" layoutY="296.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Регистрация" textAlignment="CENTER">
               <font>
                  <Font size="36.0" />
               </font>
            </Text>
            <Text layoutX="397.0" layoutY="330.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Введите свои данные для создания учетной записи:" textAlignment="CENTER" wrappingWidth="500.0">
               <font>
                  <Font size="18.0" />
               </font>
            </Text>
            <TextField fx:id="fullNameField" layoutX="523.0" layoutY="349.0" prefHeight="26.0" prefWidth="248.0" promptText="Имя/Фамилия" />
            <TextField fx:id="usernameField" layoutX="523.0" layoutY="387.0" prefHeight="26.0" prefWidth="248.0" promptText="Логин" />
            <TextField fx:id="emailField" layoutX="523.0" layoutY="425.0" prefHeight="26.0" prefWidth="248.0" promptText="Почта" />
            <PasswordField fx:id="passwordField" layoutX="523.0" layoutY="463.0" prefHeight="26.0" prefWidth="248.0" promptText="Пароль" />
            <Button layoutX="523.0" layoutY="526.0" mnemonicParsing="false" onAction="#handleRegisterButtonAction" prefHeight="32.0" prefWidth="248.0" styleClass="primary" text="Регистрация">
               <font>
                  <Font size="15.0" />
               </font>
            </Button>
            <Text layoutX="397.0" layoutY="586.0" strokeType="OUTSIDE" strokeWidth="0.0" text="или" textAlignment="CENTER" wrappingWidth="500.0">
               <font>
                  <Font size="18.0" />
               </font>
            </Text>
            <Button layoutX="523.0" layoutY="603.0" mnemonicParsing="false" onAction="#handleLoginButtonAction" prefHeight="32.0" prefWidth="248.0" styleClass="success" text="Вход">
               <font>
                  <Font size="15.0" />
               </font>
            </Button>
         </AnchorPane>
      </center>
   </BorderPane>
</StackPane>
